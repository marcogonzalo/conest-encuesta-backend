<p id="notice"><%= notice %></p>

<h1>Listing Bloques</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bloques.each do |bloque| %>
      <tr>
        <td><%= bloque.nombre %></td>
        <td><%= bloque.descripcion %></td>
        <td><%= bloque.tipo %></td>
        <td><%= link_to 'Show', bloque %></td>
        <td><%= link_to 'Edit', edit_bloque_path(bloque) %></td>
        <td><%= link_to 'Destroy', bloque, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

